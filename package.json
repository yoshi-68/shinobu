{
  "name": "shinobu",
  "productName": "シノブ",
  "version": "1.0.0",
  "private": true,
  "main": "build/electron/main.js",
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/cheerio": "^0.22.31",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.11.68",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "cheerio": "^1.0.0-rc.12",
    "electron-log": "^4.4.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "superagent": "^8.0.2",
    "typescript": "^4.8.4",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "sass": "sass src/sass/:src/css/ --no-source-map",
    "fmt": "concurrently \"npm run sass\" \"prettier --write \"settings.ts\"\" \"prettier --write \"src/**/*.{json,ts,tsx,html,css}\"\" \"prettier --write \"electron/**/*.{js,json,ts,tsx,html}\"\"",
    "dev": "concurrently \"npm run sass\" \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && electron .\"",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:build:portable": "npm run sass && npm run build && tsc -p electron && electron-builder --win --x64 --dir",
    "electron:build:nis": "npm run sass && npm run build && tsc -p electron && electron-builder --win --x64"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.3.1",
    "@types/superagent": "^4.1.15",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "electron": "^21.1.1",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "^3.2.0",
    "prettier": "^2.7.1",
    "sass": "^1.56.1",
    "wait-on": "^6.0.1"
  },
  "build": {
    "extends": null,
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    },
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "guid": "シノブ"
    },
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
